services:
  - type: web
    name: {{ project_name }}-api
    runtime: python
    buildCommand: pip install uv && uv sync
{%- if include_alembic %}
    startCommand: bash startup.sh
{%- else %}
    startCommand: uvicorn app.main:app --host 0.0.0.0 --port 8000
{%- endif %}
{%- if is_multi_repo %}
    rootDir: {{ project_name }}-api
{%- endif %}
    envVars:
      - key: DATABASE_URL
        fromDatabase:
          name: {{ project_name }}-db
          property: connectionString
      - key: SECRET_KEY
        generateValue: true
      - key: ENVIRONMENT
        value: production
{%- if include_redis %}
      - key: REDIS_URL
        fromService:
          name: {{ project_name }}-redis
          type: redis
          property: connectionString
{%- endif %}
{% if frontend_type == "react" %}
  - type: web
    name: {{ project_name }}-frontend
    runtime: static
    buildCommand: npm install && npm run build
    staticPublishPath: dist
    rootDir: {{ project_name }}-frontend
    routes:
      - type: rewrite
        source: /*
        destination: /index.html
{% endif %}
databases:
  - name: {{ project_name }}-db
    plan: free
    databaseName: {{ db_name }}
{%- if include_redis %}

redis:
  - name: {{ project_name }}-redis
    plan: free
{%- endif %}
