# Override for local development â€” adds volume mounts for hot reload
services:
  api:
{%- if is_multi_repo %}
    volumes:
      - ./{{ project_name }}-api/app:/app/app
{%- else %}
    volumes:
      - ./app:/app/app
{%- endif %}
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
{% if frontend_type == "react" %}
  frontend:
    build:
      context: ./{{ project_name }}-frontend
      dockerfile: Dockerfile
      target: builder
    command: npm run dev -- --host 0.0.0.0 --port {{ frontend_port }}
    volumes:
      - ./{{ project_name }}-frontend/src:/app/src
{%- endif %}
