name: Deploy Frontend to Azure Static Web Apps

on:
  push:
    branches: [main]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
{% if is_multi_repo %}
    defaults:
      run:
        working-directory: {{ project_name }}-frontend
{% endif %}
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-node@v4
        with:
          node-version: "22"

      - run: npm install
      - run: npm run build

      - name: Deploy to Azure Static Web Apps
        uses: Azure/static-web-apps-deploy@v1
        with:
          {% raw %}azure_static_web_apps_api_token: ${{ secrets.AZURE_STATIC_WEB_APPS_TOKEN }}{% endraw %}
{% if is_multi_repo %}
          app_location: "{{ project_name }}-frontend"
{% else %}
          app_location: "/"
{% endif %}
          output_location: "dist"
